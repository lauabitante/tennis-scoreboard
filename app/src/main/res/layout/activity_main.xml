<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#557555">

    <TextView android:text="50" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/score1"
        android:width="300dp"
        android:height="100dp"
        android:textSize="50dp"
        android:textAlignment="center"
        android:gravity="center_vertical|center_horizontal"
        android:textColor="#FEE673"
        android:layout_above="@+id/score2"
        android:layout_centerHorizontal="true" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="#ACBBAC"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/view" />



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Opponent"
        android:id="@+id/btnOpponent"
        android:onClick="updateScore1"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#889F88"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        android:height="65dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="50"
        android:id="@+id/score2"
        android:width="300dp"
        android:height="100dp"
        android:textSize="50dp"
        android:textAlignment="center"
        android:gravity="center_vertical|center_horizontal"
        android:textColor="#FEE673"
        android:layout_below="@+id/view"
        android:layout_alignLeft="@+id/score1"
        android:layout_alignStart="@+id/score1" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ME"
        android:id="@+id/btnMe"
        android:onClick="updateScore2"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="#889F88"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        android:height="65dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset Scores"
        android:id="@+id/button"
        android:textSize="12dp"
        android:textColor="#FFFFFF"
        android:height="5dp"
        android:layout_alignBottom="@+id/view"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="bottom|center_horizontal"
        android:background="?android:attr/selectableItemBackground"
        android:onClick="resetScores"/>


</RelativeLayout>
